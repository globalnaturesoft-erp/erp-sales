<table class="table table-advance table-hover table-striped table-checkable order-column" id="">
    <thead>
        <tr>
            <th width='1%'>
                <%= erp_datalist_check_all %>
            </th>
            <% if get_columns(params).include?("order_code") %>
                <th width='15%' class="sortable" sort-by='erp_orders_orders.code'>
                    <%= t('.order_code') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("customer") %>
                <th>
                    <%= t('.customer') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("quantity") %>
                <th class="">
                    <%= t('.quantity') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("total") %>
                <th class="sortable" sort-by='erp_orders_orders.cache_total'>
                    <%= t('.total') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("remain") %>
                <th>
                    <%= t('.remain') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("order_date") %>
                <th class="sortable" sort-by='erp_orders_orders.order_date'>
                    <%= t('.order_date') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("deadline") %>
                <th>
                    <%= t('.debt_deadline') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("status") %>
                <th>
                    <%= t('.status') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("employee") %>
                <th class="text-center">
                    <%= t('.employee') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("creator") %>
                <th class="text-center">
                    <%= t('.creator') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("created_at") %>
                <th class="sortable" sort-by='erp_orders_orders.created_at'>
                    <%= t('.created_at') %>
                </th>
            <% end %>
            <th width="7%"><%= t('.actions') %></th>
        </tr>
    </thead>
    <tbody>
        <% @orders.each do |order| %>
            <tr class="<%= 'blurred' if order.is_deleted? %> odd gradeX has-child-table" data-url="<%= erp_sales.backend_sales_order_details_path(id: order.id) %>">
                <td>
                    <%= erp_datalist_check_row(id: order.id) %>
                </td>
                <% if get_columns(params).include?("order_code") %>
                <td>
                    <i class="fa fa-plus expand tr-expand-button"></i>
                    <strong class="text-nowrap"><%= order.code %></strong>
                </td>
                <% end %>
                <% if get_columns(params).include?("customer") %>
                <td><%= contact_link(order.customer, order.customer_name) %>
                    <% if Erp::Core.available?('ortho_k') %>
                        <%= order.display_customer_info.present? ? "<br/>".html_safe + order.display_customer_info : '' %>
                    <% end %>
                </td>
                <% end %>
                <% if get_columns(params).include?("quantity") %>
                <td><%= order.items_count %></td>
                <% end %>
                <% if get_columns(params).include?("total") %>
                <td class="text-bold"><%= format_price(order.cache_total) %></td>
                <% end %>
                <% if get_columns(params).include?("remain") %>
                <td><%= format_price(order.remain_amount) %></td>
                <% end %>
                <% if get_columns(params).include?("order_date") %>
                <td><%= format_date(order.order_date) %></td>
                <% end %>
                <% if get_columns(params).include?("deadline") %>
                <td><%= format_date(order.get_payment_deadline) %></td>
                <% end %>
                <% if get_columns(params).include?("status") %>
                <td>
                    <%= status_label(order.status) %>
                    <br>
                    <%= status_label(order.cache_payment_status) %>
                </td>
                <% end %>
                <% if get_columns(params).include?("employee") %>
                <td>
                    <%= erp_component('avatar', {
                        user: order.employee
                    }) %>
                </td>
                <% end %>
                <% if get_columns(params).include?("creator") %>
                <td>
                    <%= erp_component('avatar', {
                        user: order.creator
                    }) %>
                </td>
                <% end %>
                <% if get_columns(params).include?("created_at") %>
                <td><%= format_date(order.created_at) %></td>
                <% end %>
                <td>
                    <%= order_dropdown_actions(order) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
<% if @orders.empty? %>
    <div class="datalist-empty-line"><%= t('.no_matching_records_found') %></div>
<% end %>

<%= erp_datalist_pagination(@orders) %>
